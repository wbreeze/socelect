<h1>Publish the Question</h1>

<p id="notice"><%= notice %></p>

<%= render :partial => 'display', :object => @choice %>

<%= form_for(@choice, url: publish_choice_path) do |f| %>
  <div id='open-close'>
    <div class="date_time_field">
      <%= f.label 'Opening' %>
      <%= f.datetime_local_field :opening, :default => DateTime.current %>
    </div>
    <div class="date_time_field">
      <%= f.label 'Deadline' %>
      <%= f.datetime_local_field :deadline, :default => 1.day.from_now %>
    </div>
  </div>
  <div class="actions">
    <%= submit_tag 'Edit options', :name => 'edit' %>
    <%= f.submit 'Publish' %>
  </div>
<% end %>

