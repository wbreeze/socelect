<h1>Alternatives for choice</h1>

<p id="notice"><%= notice %></p>

<%= render :partial => 'choice_edit_errors' %>

<%= form_for(@choice) do |f| %>
  <%= render :partial => 'choice_title_desc', :object => f %>
  <div id="alternatives">
    <%= render :partial => 'choices/alternative', 
        :collection => @choice.alternatives %>
  </div>
  <div class="actions">
    <%= add_alternative_button 'Add an alternative' %>
    <%= f.submit %>
  </div>
<% end %>

<%= button_to 'Cancel', root_path %>

