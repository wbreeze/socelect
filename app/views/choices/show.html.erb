<p id="notice"><%= notice %></p>

<%= render :partial => 'title' %>

<% now = Time.now %>
<% if now < @choice.opening %>
  <p>This choice will open for selection in 
    <%= distance_of_time_in_words(now, @choice.opening) %>
  </p>
<% elsif now < @choice.deadline %>
  <%= render :partial => 'selection', 
      :locals => { 
        :choice => @choice,
        :expression => @expression 
      } %>
  <p>Express your preference within the next
    <%= distance_of_time_in_words(now, @choice.deadline) %>.
  </p>
<% else %>
  <p>This choice closed for selection
  <%= distance_of_time_in_words(now, @choice.deadline) %> ago.
  </p>
<% end %>

<%= button_to 'Socelect', root_path %>
