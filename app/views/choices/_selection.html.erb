<%= form_tag selection_choice_path do %>
  <dl class="alternatives">
    <% @choice.alternatives.shuffle.each do |alt| %>
      <dt class="alternativeTitle">
        <%= radio_button_tag :alternative, alt.id %>
        <%= alt.title %>
      </dt>
      <dd class="alternativeDescription">
        <%= alt.description %>
      </dd>
    <% end %>
  </dl>
  <div class="actions">
    <%= submit_tag 'Submit preference' %>
  </div>
<% end %>
