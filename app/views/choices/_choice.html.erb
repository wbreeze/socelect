<li>
  <%= link_to choice.title, choice_url(id: choice.read_token) %>:
  <span class="description"><%= choice.description %></span>
  <span class="closing">
    (<%= datetime_full_display(choice.deadline, 'Closes', 'Closed') %>)
  </span>
  <% if choice.intermediate %>
    <span class="result-link"><%=
      link_to 'Intermediate result', result_choice_url(id: choice.read_token)
    %></span>
  <% end %>
</li>
